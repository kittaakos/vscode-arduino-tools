{
  "name": "vscode-arduino-tools",
  "private": true,
  "version": "0.0.1-beta.1",
  "publisher": "arduino",
  "license": "Apache-2.0",
  "author": "Arduino SA",
  "description": "Arduino Tools extension for VS Code",
  "main": "./lib/extension",
  "engines": {
    "vscode": "^1.46.0"
  },
  "scripts": {
    "prepare": "yarn clean && yarn compile && yarn lint && yarn webpack && yarn package",
    "clean": "rimraf ./lib ./dist ./build-artifacts",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -w -p ./",
    "webpack": "webpack --config ./configs/webpack.config.js",
    "package": "mkdirp build-artifacts && vsce package --out ./build-artifacts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arduino/vscode-arduino-language-server"
  },
  "bugs": {
    "url": "https://github.com/arduino/vscode-arduino-language-server/issues"
  },
  "devDependencies": {
    "@types/debounce": "^1.2.0",
    "@types/deep-equal": "^1.0.1",
    "@types/node": "^10.14.9",
    "@types/vscode": "^1.41.0",
    "@typescript-eslint/eslint-plugin": "^4.8.0",
    "@typescript-eslint/parser": "^4.8.0",
    "copy-webpack-plugin": "^6.1.0",
    "eslint": "^7.9.0",
    "mkdirp": "^1.0.4",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3",
    "vsce": "^1.66.0",
    "vscode": "^1.1.33",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6",
    "webpack-permissions-plugin": "^1.0.7"
  },
  "dependencies": {
    "async-mutex": "^0.3.0",
    "debounce": "^1.2.1",
    "deep-equal": "^2.0.3",
    "deepmerge": "^4.2.2",
    "execa": "^5.0.0",
    "JSONStream": "^1.3.5",
    "path": "^0.12.7",
    "vscode-languageclient": "^6.1.3",
    "web-request": "^1.0.7"
  },
  "keywords": [
    "arduino",
    "iot",
    "ino",
    "IntelliSense"
  ],
  "files": [
    "src",
    "lib",
    "syntaxes",
    "languages"
  ],
  "categories": [
    "Programming Languages",
    "Formatters",
    "Debuggers"
  ],
  "galleryBanner": {
    "color": "#005c5f",
    "theme": "light"
  },
  "activationEvents": [
    "onLanguage:ino",
    "onCommand:arduino.debug.start",
    "onCommand:arduino.languageserver.start",
    "onCommand:arduino.languageserver.stop",
    "onCommand:arduino.languageserver.restart",
    "onCommand:arduinoTools.cliVersion",
    "onCommand:arduinoTools.coreSearch",
    "onCommand:arduinoTools.setBoard"
  ],
  "contributes": {
    "languages": [
      {
        "id": "ino",
        "aliases": [
          "INO",
          "Ino",
          "ino"
        ],
        "extensions": [
          ".ino",
          ".c",
          ".cpp",
          ".h",
          ".hpp",
          ".pde"
        ],
        "configuration": "./languages/ino.language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ino",
        "scopeName": "source.ino",
        "path": "./syntaxes/ino.tmGrammar.json"
      }
    ],
    "commands": [
      {
        "command": "arduino.languageserver.start",
        "title": "Start Language Server",
        "category": "Arduino"
      },
      {
        "command": "arduino.languageserver.stop",
        "title": "Stop Language Server",
        "category": "Arduino"
      },
      {
        "command": "arduino.languageserver.restart",
        "title": "Restart Language Server",
        "category": "Arduino"
      },
      {
        "command": "arduino.debug.start",
        "title": "Start Debug",
        "category": "Arduino"
      },
      {
        "command": "arduinoTools.cliVersion",
        "title": "version",
        "category": "Proposed: Arduino"
      },
      {
        "command": "arduinoTools.coreSearch",
        "title": "core search",
        "category": "Proposed: Arduino"
      },
      {
        "command": "arduinoTools.setBoard",
        "title": "Select a board",
        "category": "Proposed: Arduino"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Arduino Tools configuration",
      "properties": {
        "arduinoTools.cliPath": {
          "type": "string",
          "default": "",
          "description": "Path to the Arduino CLI. If not specified, `arduino-cli` will be picked up from the user's $PATH."
        },
        "arduinoTools.cliConfigPath": {
          "type": "string",
          "default": "",
          "description": "Path to the Arduino CLI configuration file. If not set, the `arduino-cli.yaml` config will be picked up from the default `directories.data` location."
        }
      }
    }
  }
}
